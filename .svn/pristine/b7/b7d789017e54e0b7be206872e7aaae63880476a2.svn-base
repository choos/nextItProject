<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.zero.market.dao.IMarketDao">
		
		
	  <!-- 상품페이지 메인  DB 불러오기 -->	
		<select id="getMarketList" parameterType="String"
				resultType="com.zero.market.vo.MarketVO">

						SELECT           
								      s_title                    
								    , s_category                   
								    , s_price                  
								    , s_main_img
								    , s_love
								    , s_code                    
							    
						FROM sales_board
				<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(sCategory)">
  			WHERE s_category like '%' || #{sCategory} || '%'
  			</if>
				 	
		</select>
  
  
<!--   <sql id="searchCategory">
  	<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(sCategory)">
  			WHERE s_category like '%|| #{sCategory} || %'
  	</if>
  </sql> -->
  
  
  
  
  <!-- 리뷰 DB 불러오기 -->
  <select id="getMarketReviewList"
				resultType="com.zero.market.vo.MarketVO" parameterType="String">
  	SELECT
  				   
            b.sr_mem_id
            , b.sr_content
            , b.sr_love
            , b.sr_reg_date
            , b.sr_p_quantity
            , b.sr_content_img
		FROM
    			sales_board a, sales_review b
   WHERE a.s_code = #{sCode}
     AND a.s_code = b.sr_s_code
		
<!-- 		<include refid="searchCategory"></include>
 -->		
		</select>

  
     <!-- 상품뷰 DB 불러오기 -->
  <select id="getMarket"
				resultType="com.zero.market.vo.MarketVO" parameterType="String">
  	SELECT
  					s_code
			    , s_title
			    , s_category
			    , s_price
			    , s_inven
			    , s_info
			    , s_main_img
			    , s_img1
			    , s_img2
			    , s_img3
			    , s_content1
			    , s_content2
			    , s_content3
			    , s_content4
			    , s_content5
			    , s_content6
			    , s_content7
			    , s_content8
			    , s_content9
			    , s_content10
		FROM
    			sales_board 
   WHERE s_code = #{sCode}
		
		
		</select>
  
       
